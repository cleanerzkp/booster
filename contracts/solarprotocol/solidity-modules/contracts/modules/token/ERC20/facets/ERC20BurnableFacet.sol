pragma solidity ^0.8.9;

import {IERC20Burnable} from "../interfaces/IERC20Burnable.sol";
import {LibERC20} from "../LibERC20.sol";
import {IERC20Errors} from "../errors/IERC20Errors.sol";

contract ERC20BurnableFacet is IERC20Burnable {
    /**
     * @inheritdoc IERC20Burnable
     */
    function burn(uint256 amount) external virtual {
        LibERC20.burn(msg.sender, amount);
    }

    /**
     * @inheritdoc IERC20Burnable
     */
    function burnFrom(address account, uint256 amount) external virtual {
        LibERC20.spendAllowance(account, msg.sender, amount);
        LibERC20.burn(account, amount);
    }
}
