pragma solidity ^0.8.9;

import {IERC20Mintable} from "../interfaces/IERC20Mintable.sol";
import {LibERC20} from "../LibERC20.sol";
import {LibAccessControl} from "../../../access/AccessControlFacet.sol";
import {LibRoles} from "../../../access/LibRoles.sol";

contract ERC20MintableFacet is IERC20Mintable {
    /**
     * @inheritdoc IERC20Mintable
     */
    function mint(address account, uint256 amount) external {
        LibAccessControl.enforceRole(LibRoles.ERC20_MINTER_ROLE);

        LibERC20.mint(account, amount);
    }
}
